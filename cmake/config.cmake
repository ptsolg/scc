set(SCC_LIB_DIR ${CMAKE_CURRENT_SOURCE_DIR}/lib)
set(SCC_BIN_DIR ${CMAKE_CURRENT_SOURCE_DIR}/bin)
set(SCC_TEST_DIR ${CMAKE_CURRENT_SOURCE_DIR}/test)
set_property(GLOBAL PROPERTY USE_FOLDERS ON)

set(CMAKE_RUNTIME_OUTPUT_DIRECTORY ${SCC_BIN_DIR})
set(CMAKE_LIBRARY_OUTPUT_DIRECTORY ${SCC_BIN_DIR})
set(CMAKE_ARCHIVE_OUTPUT_DIRECTORY ${SCC_BIN_DIR})

foreach(cfg ${CMAKE_CONFIGURATION_TYPES})
    string(TOUPPER ${cfg} cfg)
    set(CMAKE_RUNTIME_OUTPUT_DIRECTORY_${cfg} ${SCC_BIN_DIR})
    set(CMAKE_LIBRARY_OUTPUT_DIRECTORY_${cfg} ${SCC_BIN_DIR})
    set(CMAKE_ARCHIVE_OUTPUT_DIRECTORY_${cfg} ${SCC_BIN_DIR})
endforeach()